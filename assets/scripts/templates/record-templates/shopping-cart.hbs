<div id="shopping-cart">
  <table class="table table-striped">
    <thead class="table-head">
      <tr>
        <th>Album</th>
        <th>Artist</th>
        <th>Press Date</th>
        <th>Price</th>
      </tr>
    </thead>
    {{#each records as |record|}}
      <tbody>
        <th>{{record.title}}</th>
        <th>{{record.artist}}</th>
        <th>{{record.press_date}}</th>
        <th>{{record.price}}</th>
        <th><button class="btn btn-danger btn-xs remove-record-cart"data-id="{{record.id}}">Remove</button></th>
      </tbody>
    {{/each}}
  </table>

</div>

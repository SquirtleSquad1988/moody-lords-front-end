{{#each blogs as |blog|}}
    <form class="form-check hidden jumbotron new-box" id="blog-edit-form" data-id="{{blog.id}}">
      <legend>Edit Blog</legend>
      <fieldset>
        <div class="form-group">
          <label>Title</label>
          <input value="{{blog.title}}" class="form-control" type="text" value name="blog[title]" required>
        </div>
        <div class="form-group">
          <label>Blog Content</label>
          <textarea  rows="20" class="form-control" name="blog[body]" required>{{blog.body}}</textarea>
        </div>
        <button type="submit" class="btn btn-success" data-id="{{blog.id}}">Edit</button>
      </fieldset>
    </form>
{{/each}}

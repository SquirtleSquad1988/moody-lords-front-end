<h1>Moody Lords</h1>
<br>

{{#each blogs as |blog|}}
  <div>
      <div class="blog-item" data-id="{{blog.id}}">
        <div class="blog-info" data-id="{{blog.id}}">
          <ul class="deets" data-id="{{blog.id}}">
            <h4>{{blog.title}}<h4>
            <p>Last Updated: {{blog.updated_at}}</p>
          </ul>
          <div class="show-hide-comments">
            <span class="label label-success show-blog-comments-log-out" data-id="{{blog.id}}">Show Comments</span>
            <span class="label label-info hide-blog-comments" data-id="{{blog.id}}">Hide Comments</span>
          </div>
        </div>
        <div class="fields" data-id="{{blog.id}}">
          <p><small>{{blog.body}}</small></p>
          <div class="display-comments" data-id="{{blog.id}}"></div>
        </div>
      </div>
    </div>
{{/each}}

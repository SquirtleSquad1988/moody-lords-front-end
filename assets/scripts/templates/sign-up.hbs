<form class="form-check" id="sign-up">
  <legend>Sign Up!</legend>
  <div class="form-group row">
    <label for="example-text-input" class="col-2 col-form-label">E-mail</label>
    <div class="col-10">
      <input class="form-control" type="text" name="credentials[email]">
    </div>
  </div>
  <div class="form-group row">
    <label for="example-text-input" class="col-2 col-form-label">Password</label>
    <div class="col-10">
      <input class="form-control" type="password" name="credentials[password]">
    </div>
  </div>
  <div class="form-group row">
    <label for="example-text-input" class="col-2 col-form-label">Password Confirmation</label>
    <div class="col-10">
      <input class="form-control" type="password" name="credentials[password_confirmation]">
    </div>
  </div>
  <button type="submit" class="btn btn-success">Sign Up!</button>
</form>

<h1>Moody Lords</h1>
<br>
<div class="jumbotron new-box">
  <form class="form-check" id="sign-up">
    <legend>Sign Up</legend>
    <fieldset>
      <div class="form-group">
        <label>Email:</label>
        <input class="form-control" type="text" name="credentials[email]" required>
      </div>
      <div class="form-group">
        <label>Password:</label>
        <input class="form-control" type="password" name="credentials[password]" required>
      </div>
      <div class="form-group">
        <label>Password Confirmation:</label>
        <input class="form-control" type="password" name="credentials[password_confirmation]" required>
      </div>
      <button type="submit" class="btn btn-success">Sign Up</button>
    </fieldset>
  </form>
</div>

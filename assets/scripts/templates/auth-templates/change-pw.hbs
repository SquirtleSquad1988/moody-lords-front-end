<div>
  <form class="form-check" id="change-password">
    <legend>Change Password</legend>
    <fieldset>
      <div class="form-group">
        <label>Old Password:</label>
        <input class="form-control" type="password" name="passwords[old]" required>
      </div>
      <div class="form-group">
        <label>New Password:</label>
        <input class="form-control" type="password" name="passwords[new]" required>
      </div>
      <button type="submit" class="btn btn-success">Change Password</button>
    </fieldset>
  </form>
</div>
